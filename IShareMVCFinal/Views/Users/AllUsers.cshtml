@model List<IShareMVCFinal.Models.Tables.User>
@{
    ViewBag.Title = "All Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<hr />
<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.ActionLink(user.UserName, "UserAccount", "Users", new { id = user.Id }, null)</td>
            </tr>
        }

    </tbody>
</table>