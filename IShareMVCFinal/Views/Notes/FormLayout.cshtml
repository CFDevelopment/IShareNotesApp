@model IShareMVCFinal.Models.Tables.Note

@{
    ViewBag.Title = "FormLayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    
    @using (Html.BeginForm())
    {
        <div id="uiFormComponent">
            
            <div>
                <p>                    
                    <h3>Add to our Note Share :)</h3>                
                    <hr style="width:30%; margin-left: 0;" />
                </p>
            </div>

            <form class="form-horizontal">            
                <div id="titlePadding">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>
                </div>
                <div class="descriptionPadding">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Description, new { rows = "3", cols = "", style = "width: 90%; height: 50px;" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                </div>
                <div class="contentPadding">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Content, new { rows = "7", cols = "", style = "width: 90%; height: 100px;" })
                            @Html.ValidationMessageFor(model => model.Content)
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    }

</div>





